<div class="row">
  <div class="col-lg-6">
    <div class="well">
      <form class="bs-example form-horizontal">
        <fieldset>
          <legend>Ajout</legend>
          <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">Nom</label>
            <div class="col-lg-10">
              <input class="form-control" id="inputName" placeholder="Name" type="text">
            </div>
          </div>
          <div class="form-group">
            <label for="textArea" class="col-lg-2 control-label">Note</label>
            <div class="col-lg-10">
              <textarea class="form-control" rows="3" id="textArea"></textarea>
              <span class="help-block">Possibilité de décrire le composant par un texte multi-lignes.</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button class="btn btn-default">Réinit.</button> 
              <button type="submit" class="btn btn-primary">Valide</button> 
            </div>
          </div>          
        </fieldset>
      </form>
    </div>
  </div>
  <div class="col-lg-4 col-lg-offset-1">
    <div class="well">
      <form class="bs-example form-horizontal">
        <fieldset>
          <legend>Ajout massif</legend>
          <div class="form-group">
            <label for="textArea" class="col-lg-2 control-label">Note</label>
            <div class="col-lg-10">
              <textarea class="form-control" rows="3" id="textArea"></textarea>
              <span class="help-block">Liste des composants avec un séparateur saut de ligne.</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button class="btn btn-default">Réinit.</button> 
              <button type="submit" class="btn btn-primary">Valide</button> 
            </div>
          </div>          
        </fieldset>
      </form>
    </div>
  </div>
</div>

            
<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">Composants</h1>
  </div>
  <% if @components.size != 0 %>
    <div class="bs-example table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Note</th>
            <th>Liaison</th>
          </tr>
        </thead>
        <tbody>
          <% @components.each do |component| %>
            <tr>
              <td><%= component.id %></td>
              <td><%= component.name %></td>
              <td><%= component.note %></td>
              <td>
                <a href="#"><span class="label label-primary"><%= component.manage.size %></span></a>
                <a href="#"><span class="label label-success"><%= component.managed_by.size %></span></a>
                <a href="#"><span class="label label-warning"><%= component.use.size %></span></a>
                <a href="#"><span class="label label-info"><%= component.used_by.size %></span></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /example -->
  <% end %>  
</div>

