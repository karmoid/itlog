<div class="jumbotron">
  <h1><%= @universe.name %></h1>
  <h2><%= @kind.name %></h2>
  <p><%= @kind.note %></p>
  <p><a href="<%= universe_kinds_path(@universe) %>" class="btn btn-primary btn-lg">retour</a></p>
</div>
            
<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">Composants</h1>
  </div>
  <% if @components.size != 0 %>
    <div class="bs-example table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Note</th>
            <th>Liaison</th>
          </tr>
        </thead>
        <tbody>
          <% @components.each do |component| %>
            <tr>
              <td><%= component.id %></td>
              <td><%= component.name %></td>
              <td><%= component.note %></td>
              <td><span class="badge"><%= component.manage.size %></span>
                  <span class="badge"><%= component.managed_by.size %></span>
                  <span class="badge"><%= component.use.size %></span>
                  <span class="badge"><%= component.used_by.size %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /example -->
  <% end %>  
</div>

<%= link_to 'New Kind', new_universe_kind_component_path(@universe,@kind) %>