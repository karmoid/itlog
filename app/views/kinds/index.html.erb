<h1><%= @universe.note %></h1>
<p><%= @universe.name %></p>
<h1>Listing kinds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Note</th>
    <th>Universe</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @kinds.each do |kind| %>
  <tr>
    <td><%= kind.name %></td>
    <td><%= kind.note %></td>
    <td><%= kind.universe_id %></td>
    <td><%= link_to 'Show', kind %></td>
    <td><%= link_to 'Edit', edit_kind_path(kind) %></td>
    <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Kind', new_universe_kind_path(@universe) %>
